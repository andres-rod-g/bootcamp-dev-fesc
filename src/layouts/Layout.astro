---
import "../styles/global.css";

import IndexHeader from "@/components/layouts/indexHeader";
import IndexNav from "@/components/layouts/indexNav";
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>Astro Basics</title>
	</head>
	<body>
		<div class="flex flex-col p-2 w-screen h-screen bg-white">
			{/* Header */}
			<IndexHeader client:load />

			<div class="flex h-full flex-row">
				{/* Nav */}
				<IndexNav client:load />

				{/* Content */}
				<div class="flex w-full bg-gray-100 rounded-xl p-2">
					<slot />
				</div>
			</div>
		</div>
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
